  
<%= simple_form_for(@tweeet) do |f| %>
<%= f.error_notification %>
<div class="field">
    	<h3 class="title is-4" style="text-align:center"><%= current_user.name %>, What are you thinking: </h3>	
  <div class="control">
    <%= f.input :tweeet, label: "Write your new think", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new think...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, 'Share it' , class: "button is-info" %>
<% end %>